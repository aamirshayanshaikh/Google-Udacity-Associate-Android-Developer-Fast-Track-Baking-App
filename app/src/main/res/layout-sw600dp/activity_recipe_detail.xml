<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:divider="?android:dividerVertical"
        android:showDividers="middle">

    <fragment
            android:id="@+id/recipe_detail_fragment_for_tablet"
            android:name="com.tachyonlabs.bakingapp.fragments.RecipeDetailFragment"
            android:layout_width="@dimen/tablet_layout_left_pane_width"
            android:layout_height="match_parent"/>

    <fragment
            android:id="@+id/recipe_step_fragment_for_tablet"
            android:name="com.tachyonlabs.bakingapp.fragments.RecipeStepFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

</LinearLayout>
